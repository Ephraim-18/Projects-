print("Type Help to play the game")
command = ""
started = False
while True:
    command = input("> ").lower()
    if command == "start":
        if started:
            print ("car is already stated!")
        else:
            started = True
            print ("car started") 
    elif command == "stop":
        if not started:
            print ("car is already stoped!")
        else:
            started = False 
            print ("car stopped")
    elif command == "help":
      print("start - to start the car\nstop - to stop the car\nquit - to exit the program")
    elif command == "quit":
      print("Good Bye!")
      break
    else:
      print ("Sorry I don't understand anything!")
